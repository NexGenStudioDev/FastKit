{
  "name": "@abhishek-nexgen-dev/fastkit",
  "version": "1.0.1",
  "description": "A modular, class-based toolkit for fast API development with TypeScript and Express.",
  "main": "dist/FastKit.js",
  "types": "dist/FastKit.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "rebuild:pnpm": "pnpm run clean && pnpm run build",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "start:dev": "ts-node-dev --respawn --transpile-only src/FastKit.ts",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,md}'",
    "prepublishOnly": "npm run format && npm run lint && npm run build",
    "publish:npm": "npm publish --access public",
    "publish:pnpm": "pnpm publish --access public",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "api",
    "typescript",
    "auth",
    "utils",
    "class-based",
    "modular",
    "toolkit",
    "headless",
    "nodejs"
  ],
  "author": "Abhishek Kumar <abhishek.nexgen.dev@gmail.com>",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NexGenStudioDev/FastKit"
  },
  "bugs": {
    "url": "https://github.com/NexGenStudioDev/FastKit/issues"
  },
  "homepage": "https://github.com/NexGenStudioDev/FastKit#readme",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "i": "^0.3.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
