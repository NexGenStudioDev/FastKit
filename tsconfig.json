{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",                  // Compile to CommonJS
    "declaration": true,                   // Emit .d.ts files for types
    "esModuleInterop": true,               // Allow default import from CJS
    "outDir": "dist",
    "rootDir": "src",
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test.js",
    "test.ts",
    "src/script/*.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__test__/**"
  ]

}
